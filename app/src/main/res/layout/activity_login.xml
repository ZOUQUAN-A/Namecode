<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints" android:id="@+id/imageView"
            tools:layout_editor_absoluteX="147dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="98dp">
    </ImageView>
    <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:hint="请输入用户名"
            android:lines="1"
            android:inputType="text"
            android:gravity="center"
            android:id="@+id/username"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView">
    </EditText>
    <EditText
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:lines="1"
            android:hint="请输入密码"
            android:gravity="center"
            android:inputType="textPassword"
            android:id="@+id/password"
            tools:ignore="HardcodedText,MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </EditText>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:id="@+id/linearLayout"
            android:orientation="horizontal">
    </LinearLayout>

    <Button
            android:layout_width="264dp"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:onClick="button_Onclick"
            android:text="登录"
            tools:ignore="HardcodedText,MissingConstraints,OnClick"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </Button>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="#012456"
            android:onClick="tv_Onclick"
            tools:ignore="MissingConstraints,OnClick"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>