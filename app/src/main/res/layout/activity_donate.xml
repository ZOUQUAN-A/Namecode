<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="微信"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wechatpay"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/wechatpay2"
            android:onClick="Wechatpay_OnClick"/>
    <Button
            android:text="支付宝"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wechatpay2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toEndOf="@+id/wechatpay"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="31dp" android:onClick="Alipay_OnClick"/>
    <TextView
            android:text="感谢您的捐赠！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="20sp" android:textColor="#00B0FF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/wechatpay"
    />
    <ImageView
            android:layout_width="318dp"
            android:layout_height="601dp" app:srcCompat="@drawable/wechatpay" android:id="@+id/imageView"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/wechatpay" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>